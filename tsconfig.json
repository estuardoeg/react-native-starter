{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "~assets/*": ["assets/*"],
      "~components/*": ["components/*"],
      "~screens": ["screens/index"],
      "~screens/*": ["screens/*"],
      "~stores/*": ["stores/*"],
      "~utils/*": ["utils/*"],
      "~config": ["config"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
